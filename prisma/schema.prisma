generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Waitlist {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)
  name      String   @default("Anonymous")

  @@map("waitlists")
}

model User {
  id                       String              @id @default(uuid())
  email                    String              @unique
  active                   Boolean             @default(true)
  password                 String
  passwordChangedAt        DateTime?           @db.Timestamptz(6)
  passwordResetToken       String?
  passwordResetExpires     DateTime?           @db.Timestamptz(6)
  createdAt                DateTime            @default(now()) @db.Timestamptz(6)
  updatedAt                DateTime            @updatedAt @db.Timestamptz(6)
  isEmailVerified          Boolean             @default(false)
  emailVerificationExpires DateTime?           @db.Timestamptz(6)
  emailVerificationToken   String?
  name                     String
  profile                  Profile?
  isOnboardingCompleted    Boolean             @default(false)
  displayPreferences       DisplayPreference[]

  @@map("users")
}

model Profile {
  id          String             @id @default(uuid())
  userId      String             @unique
  createdAt   DateTime           @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime           @updatedAt @db.Timestamptz(6)
  avatarUrl   String?
  bio         String?
  // displayName String?
  goals       String[]           @default([])
  isPublic    Boolean            @default(true)
  location    String?
  username    String?            @unique
  links       Link[]
  user        User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  display     DisplayPreference?

  @@map("profiles")
}

model Link {
  id           String   @id @default(uuid())
  profileId    String
  title        String
  url          String
  platform     String?
  displayOrder Int      @default(0)
  isVisible    Boolean  @default(true)
  clickCount   Int      @default(0)
  createdAt    DateTime @default(now()) @db.Timestamptz(6)
  updatedAt    DateTime @updatedAt @db.Timestamptz(6)
  icon_link    String?
  profile      Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@index([displayOrder])
  @@map("links")
}

model DisplayPreference {
  id               String   @id @default(uuid())
  userId           String
  profileId        String   @unique
  selected_theme   String?
  font_config      Json?    @default("{}")
  corner_config    Json?    @default("{}")
  wallpaper_config Json?    @default("{}")
  createdAt        DateTime @default(now()) @db.Timestamptz(6)
  updatedAt        DateTime @updatedAt @db.Timestamptz(6)
  profile          Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("display_preferences")
}
